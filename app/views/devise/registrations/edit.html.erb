<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="jumbotron">
    <h1 class="display-3">Edit <%= @user.email %></h1>
  </div>
  <%= devise_error_messages! %>

  <%= hidden_field(:user, :email) %>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class='row display-flex'>
      <div class='col league-row'>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      </div>
    </div>
  <% end %>
  <div class='row display-flex'>
    <div class='col league-row'>
      <%= f.label :password %><em> - <%= @minimum_password_length %> characters minimum</em>
      <br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <br />
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
        <br />
      <% end %>
      <br />
      <%= f.submit "Update", :class => "btn btn-primary btn-md" %>
    </div>
  </div>
<% end %>

<div class='row display-flex'>
  <div class='col league-row'>
    <div class='players-header'>Cancel my account</div>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-primary btn-md" %>
  </div>
</div>
